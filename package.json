{
  "name": "directory-indexer",
  "version": "0.1.1",
  "description": "AI-powered directory indexing with semantic search for MCP servers",
  "main": "dist/cli.js",
  "bin": {
    "directory-indexer": "bin/directory-indexer.js"
  },
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit.test.ts tests/cli.unit.test.ts tests/edge-cases.unit.test.ts tests/error-handling.unit.test.ts tests/providers.unit.test.ts",
    "test:integration": "vitest run tests/integration.test.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "cli": "node bin/directory-indexer.js"
  },
  "keywords": [
    "mcp",
    "search",
    "indexing",
    "ai",
    "semantic",
    "cli"
  ],
  "author": "Peter Etelej <peter@etelej.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/peteretelej/directory-indexer.git"
  },
  "homepage": "https://github.com/peteretelej/directory-indexer",
  "bugs": {
    "url": "https://github.com/peteretelej/directory-indexer/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "bin/"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "better-sqlite3": "^11.5.0",
    "commander": "^12.1.0",
    "mime-types": "^2.1.35",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.15.0",
    "rimraf": "^5.0.0",
    "tmp": "^0.2.3",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vitest": "^3.2.4"
  }
}