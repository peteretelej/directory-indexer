{
  "name": "directory-indexer",
  "version": "0.0.10",
  "description": "AI-powered directory indexing with semantic search for MCP servers",
  "main": "dist/cli.js",
  "bin": {
    "directory-indexer": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:mcp": "vitest run tests/mcp",
    "lint": "eslint src tests --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "search",
    "indexing",
    "ai",
    "semantic",
    "cli"
  ],
  "author": "Peter Etelej <peter@etelej.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/peteretelej/directory-indexer.git"
  },
  "homepage": "https://github.com/peteretelej/directory-indexer",
  "bugs": {
    "url": "https://github.com/peteretelej/directory-indexer/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "better-sqlite3": "^11.5.0",
    "commander": "^12.1.0",
    "glob": "^11.0.0",
    "mime-types": "^2.1.35",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "rimraf": "^6.0.1",
    "tmp": "^0.2.3",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}